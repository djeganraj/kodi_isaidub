<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.isaidub"
       name="isaidub"
       version="1.0.0"
       provider-name="isaitamil">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.requests" version="2.7.0" />
        <import addon="script.module.urlresolver" version="2.0.9"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Watch Tamil movies</summary>
        <description>This XBMC plugin allows to stream Tamil movies from isaidub.net</description>
    </extension>
</addon>
